<section class="about section">
	<div class="container">
		<div class="about-wrapper">
			<div class="about-left">
				<div class="about-left-img-top">
					<img src="{{ fields.content.left.top_image.url }}" alt="{{ fields.content.left.top_image.alt }}">
				</div>
				<div class="about-left-img-bottom">
					<img src="{{ fields.content.left.buttom_image.url }}" alt="{{ fields.content.left.buttom_image.alt }}">
				</div>
			</div>

			<div class="about-right">
				<h1 class="about-title">{{ fields.content.right.title }}</h1>


				{% if fields.content.right.description %}
					<div class="about-description">{{ fields.content.right.description }}</div>
				{% endif %}

				{% if fields.content.right.link %}
					<a href="{{ fields.content.right.link.url }}" class="about-link"
						 target="{{ fields.content.right.link.target is defined and fields.content.right.link.target ? fields.content.right.link.target : '_self' }}">
						{{ fields.content.right.link.title }}
						<span class="about-link-icon">
							<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none"
									 stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
									 class="lucide lucide-chevron-right"><path d="m9 18 6-6-6-6"/></svg>
						</span>
					</a>
				{% endif %}

				<div class="about-right-img">
					<img src="{{ fields.content.right.image.url }}" alt="{{ fields.content.right.image.alt }}">
				</div>
			</div>
		</div>
	</div>
</section>